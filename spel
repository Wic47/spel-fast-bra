import random
monster_namn = ["Golbin","Skelett","level 73247 drake","grilled cheese obama sandwich","Waltuh","HOOOOOOGGG RIDAAAA"]
vapen = {
    "en pinne" : 1,
    "en kniv" : 2,
    "ett svärd" : 3,
    "ett spjut" : 4,
    "en stenbumling" : 5
 }
class Spelare():

    def __init__(self,hp,styrka,lvl,vapen,ryggsäck,floor):
        self.hp = hp
        self.styrka = styrka
        self.lvl = lvl
        self.vapen = vapen
        self.ryggsäck = ryggsäck
        self.floor = floor
Äventyrare = Spelare(25,5,1,[],{},1)

class Monster():

    def __init__(self,styrka,namn):
        self.styrka = styrka
        self.namn = namn

def fight():
    Monstret = Monster(random.randint(1,15),random.choice(monster_namn))
    if Monstret.styrka > Äventyrare.styrka:
        Äventyrare.hp -= 1
        print(f"Monstret vann och du förlorade 1 hp. Du har nu {Äventyrare.hp} hp kvar. ")
        return
    if Monstret.styrka < Äventyrare.styrka:
        Äventyrare.lvl += 1
        print(f"Du vann och gick upp i level. Din level är nu {Äventyrare.lvl}.")
        return
    if Monstret.styrka == Äventyrare.styrka:
        print("Monstret flydde.")
        return

